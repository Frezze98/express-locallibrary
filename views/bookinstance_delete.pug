extends layout

block content

  h1 #{title}: #{book_instance ? book_instance.imprint : 'Примірник не знайдено'}

  p Ви дійсно хочете видалити цей примірник книги?

  form(method='POST')
    div.form-group
      input#bookinstanceid.form-control(type='hidden', name='bookinstanceid', value=book_instance ? book_instance._id : '' )

    button.btn.btn-primary(type='submit') Видалити