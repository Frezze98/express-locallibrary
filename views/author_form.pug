extends layout

block content
  h1 #{title}

  if errors
    ul.text-danger
      each error in errors
        li #{error.msg}

  form(method='POST' action='')
    div.form-group
      label(for='first_name') Ім’я:
      input#first_name.form-control(
        type='text'
        name='first_name'
        required='true'
        value=(author ? author.first_name : '')
        maxlength='100'
      )

    div.form-group
      label(for='family_name') Прізвище:
      input#family_name.form-control(
        type='text'
        name='family_name'
        required='true'
        value=(author ? author.family_name : '')
        maxlength='100'
      )

    div.form-group
      label(for='date_of_birth') Дата народження:
      input#date_of_birth.form-control(
        type='date'
        name='date_of_birth'
        value=(author && author.date_of_birth ? author.date_of_birth.toISOString().split('T')[0] : '')
      )

    div.form-group
      label(for='date_of_death') Дата смерті:
      input#date_of_death.form-control(
        type='date'
        name='date_of_death'
        value=(author && author.date_of_death ? author.date_of_death.toISOString().split('T')[0] : '')
      )

    button.btn.btn-primary(type='submit') Створити